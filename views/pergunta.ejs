<%- include ('./partials/header.ejs') %>
    <body>
    <%- include ('./partials/navbar.ejs') %>
        <div class="container">
            <hr>
            <h1><%= pergunta.titulo %></h1>
            <p><%= pergunta.descricao %></p>

            <% if (respostas.length > 0) { %>
                <hr>
                <h3>Respostas</h3>
            <% } %>

            <% respostas.forEach(resposta => { %>
                <br>
                <div class="card">
                    <div class="card-body">
                        <p><%= resposta.corpo %></p>
                    </div>
                    <small>Data da resposta: <%= resposta.createdAt %></small>
                </div>
            <% }) %>
            
            <hr>

            <form method="POST" action="/responder">
                <h3>Responda:</h3>
                <textarea placeholder="Digite aqui sua resposta" class="form-control" name="corpo"></textarea>
                <br>
                <input type="hidden" name="pergunta" value="<%= pergunta.id %>" />
                <button class="btn btn-primary">Responder</button>
            </form>
        </div>
    </body>
<%- include ('./partials/footer.ejs') %>